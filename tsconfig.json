{
  "compilerOptions": {
    "outDir": "./public/js",

    "target": "ESNext",

    "module": "ESNext",
    "moduleResolution": "Node",

    "resolveJsonModule": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "allowJs": true,
    "checkJs": true,

    "strict": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "./src"
  ]
}
